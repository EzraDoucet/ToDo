<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Stuff You Gotta Do:</h1>
  <div id="task-form"></div>

  <div id="tasks">
    <%= render @user_tasks %>
  </div>

  <br>

  <%= link_to new_user_task_path, remote: true do %>
    <button class="btn btn-success btn-sm add-task">
      <%= fa_icon('plus') %> Add To Do
    </button>

  <% end %>
</div>